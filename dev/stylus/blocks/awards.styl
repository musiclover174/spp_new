.awards
  pt 149px
  @media $lDesktopSmall
    pt 0
  &__top
    text-align center
    max-width 1060px
    margin 0 auto
  &__bottom,
  &__top
    &-text
      text-align center
      fontify 22px 400 32px
      max-width 1060px
      margin 30px auto 0
      @media $lDesktopSmall
        fontify 20px 400 30px
      @media $desktopMedium
        fontify 18px 400 28px
    .breadcrumbs
      pl 29px
  &__list
    padding 14px
    mt 55px
    mb 60px
    @media $desktopTablet
      padding 7px
  &__item
    bgc white
    padding 75px 80px 4px
    @media $lDesktopSmall
      padding 51px 49px 4px
    @media $desktopMedium
      pb 0
    @media $PortraitMax
      padding 35px 20px
    & + &
      mt 14px
      @media $desktopTablet
        mt 7px
    &-year
      fontify 36px 500 40px
      mb 34px
      @media $lDesktopSmall
        fontify 32px 400 36px
      @media $desktopMedium
        fontify 26px 400 30px
      @media $desktopTablet
        fontify 22px 400 26px
    &-competition
      w calc(25% - 60px)
      ml 60px
      fontify 18px 400 28px
      @media $lDesktopSmall
        w calc(25% - 45px)
        ml 45px
      @media $LandscapeMax
        ml 0
        w 100%
  &__row
    df()
    w calc(100% + 60px)
    ml -60px
    @media $lDesktopSmall
      w calc(100% + 45px)
      ml -45px
    @media $LandscapeMax
      flex-direction column
      w 100%
      ml 0
      & + &
        mt 30px
  &__winners
    df()
    flex-wrap wrap
    w calc(75% - 60px)
    ml 60px
    @media $lDesktopSmall
      w calc(75% - 45px)
      ml 45px
    @media $LandscapeMax
      w 100%
      mt 45px
      ml 0
    &-item
      pos relative
      pl 83px
      w calc(50% - 30px)
      ml 59px
      mb 66px
      fontify 18px 400 28px
      @media $lDesktopSmall
        w calc(50% - 22.5px)
        ml 44px
      @media $desktopMedium
        w 100%
        ml 0
        mb 76px
      @media $PortraitMax
        &:last-child
          mb 0
      &:nth-child(2n - 1)
        ml 0
    &-img
      pos absolute
      l -3px
      t -15px