.banner
  pos relative
  oh()
  h 100vh
  df(flex-end, flex-start)
  pb 85px
  @media $lDesktopSmall
    pb 51px
  @media $desktopTablet
    h 520px
  @media $PortraitMin
    pb 30px
  &__video
    pos absolute
    t 50%
    l 50%
    min-width 100%
    min-height 100%
    opacity .65
    transform translate(-50%, -50%)
    &-wrapper
      pos fixed
      z-index -1
      t 0
      r 0
      bgc $dark
      size calc(100% - 220px) 100%
      @media $desktopTablet
        w calc(100% - 180px)
      @media $LandscapeMin
        w 100%
  &__scroll
    pos absolute
    r -32px
    b 88px
    cursor default
    fontify 16px 400 20px
    text-align center
    c white
    padding 0 5px
    transform rotate(-90deg)
    transform-origin 0 100%
    @media $lDesktopSmall
      r -45px
      b 54px
    @media $desktopTablet
      r -75px
    @media $LandscapeMin
      dn()
    &:before
      content attr(data-text)
      pos absolute
      df(center, flex-end)
      r 0
      t 0
      c black
      w 100%
      padding 0 5px
      white-space nowrap
      oh()
      opacity 0
      z-index 2
      animation scrollDown 2s ease-in-out infinite
    &:after
      content ""
      pos absolute
      r 0
      t 0
      size 0 100%
      bgc white
      animation scrollDownBg 2s ease-in-out infinite
  &__title
    c white
    font-family $bold
    fontify 90px 400 94px
    max-width 930px
    ml -2px
    @media $lDesktopSmall
      fontify 68px 400 72px
      max-width 700px
    @media $desktopMedium
      fontify 50px 400 54px
      max-width 510px
    @media $PortraitMax
      fontify 38px 400 42px
    @media $PortraitMin
      fontify 28px 400 32px
  &__subtitle
    c white
    fontify 18px 400 28px
    mt 46px
    @media $lDesktopSmall
      max-width 575px
      mt 40px
    @media $desktopMedium
      mt 25px