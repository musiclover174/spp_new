.feats
  df(stretch, flex-start)
  bgc $bgrey
  padding 0 14px 14px
  @media $desktopTablet
    padding 0 7px 7px
  @media $LandscapeMedium
    flex-direction column
  @media $LandscapeMin
    padding 0
  &__item
    bgc white
    w calc(50% - 7px)
    padding 70px 80px 90px
    @media $lDesktopSmall
      padding 51px 43px 61px
    @media $desktopTablet
      padding 41px 28px 34px
    @media $desktopTablet
      w calc(50% - 7px / 2)
    @media $LandscapeMedium
      w 100%
    & + &
      ml 14px
      @media $desktopTablet
        ml 7px
      @media $LandscapeMedium
        ml 0
        mt 7px
    &-title
      c black
      fontify 60px 400 64px
      border-bottom 1px solid alpha(black, .15)
      transition .7s border-color, .7s color
      &:hover
        border-color transparent
        color $green
      @media $lDesktopSmall
        fontify 48px 400 52px
      @media $desktopMedium
        fontify 38px 400 42px
      @media $desktopTablet
        fontify 30px 400 34px
    &-text
      fontify 18px 400 28px
      mt 30px
      @media $lDesktopSmall
        mt 34px
      @media $desktopTablet
        mt 25px