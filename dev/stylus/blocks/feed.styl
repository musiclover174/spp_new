.feed
  h 100vh
  max-height 980px
  padding 67px 0
  c white
  @media $lDesktopSmall
    padding 70px 0
  @media $desktopTablet
    h auto
    min-height 520px
    max-height inherit
  &__title
    font-family $bold
    fontify 90px 400 94px
    max-width 830px
    @media $lDesktopSmall
      fontify 68px 400 72px
      max-width 630px
    @media $desktopMedium
      fontify 50px 400 54px
      max-width 510px
    @media $PortraitMax
      fontify 38px 400 42px
      max-width 400px
  &__text
    fontify 18px 400 28px
    max-width 750px
    mt 44px
    @media $lDesktopSmall
      mt 38px
    @media $desktopMedium
      max-width 560px
  &__href
    mt 40px
