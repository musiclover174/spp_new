.feed
  h 100vh
  max-height 980px
  padding 67px 0
  c white
  @media $lDesktopSmall
    padding 70px 0
  @media $desktopTablet
    h auto
    min-height 520px
    max-height inherit
  &__title
    font-family $bold
    fontify 90px 400 94px
    max-width 830px
    @media $lDesktopSmall
      fontify 68px 400 72px
      max-width 630px
    @media $desktopMedium
      fontify 50px 400 54px
      max-width 510px
    @media $PortraitMax
      fontify 38px 400 42px
      max-width 400px
    span 
      db()
      oh()
      @media $lDesktopSmallFrom
        h 94px
      @media $largeIndex
        h 72px
      @media $middleIndex
        h 54px
    i
      pos relative
      t 100%
      font-style normal
    ^[0][visible] &
      span:nth-child(1) i
        t 0
        transition .7s top
      span:nth-child(2) i
        t 0
        transition .7s .2s top
  &__text
    fontify 18px 400 28px
    max-width 750px
    mt 44px
    @media $lDesktopSmall
      mt 38px
    @media $desktopMedium
      max-width 560px
  &__href
    mt 40px
