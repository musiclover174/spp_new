.news
  pos relative
  z-index 1
  bgc $bgrey
  padding 70px 0 105px
  @media $lDesktopSmall
    padding 53px 0 76px
  @media $LandscapeMin
    pb 56px
  &:before
    content ""
    pos absolute
    l 14px
    r 14px
    t 0
    b 14px
    bgc white
    @media $desktopTablet
      l 7px
      b 7px
      r 7px
    @media $LandscapeMin
      l 0
      b 0
      r 0
  &__title
    c black
    fontify 60px 400 64px
    mb 50px
    @media $lDesktopSmall
      fontify 48px 400 52px
      mb 32px
    @media $desktopMedium
      fontify 38px 400 42px
    @media $desktopTablet
      fontify 30px 400 34px
  &__list
    df()
    ml -60px
    w calc(100% + 60px)
    @media $lDesktopSmall
      ml -45px
      w calc(100% + 45px)
    @media $LandscapeMedium
      flex-direction column
  &__item
    pos relative
    w calc(100% / 3 - 60px)
    ml 60px
    @media $lDesktopSmall
      w calc(100% / 3 - 45px)
      ml 45px
    @media $desktopMedium
      w calc(50% - 45px)
      &:nth-child(3)
        dn()
    @media $LandscapeMedium
      w calc(100% - 45px)
      & + &
        mt 40px
    &-date
      c $grey
      fontify 16px 400 26px
      mb 5px
    &-href
      c black
      fontify 30px 400 38px
      bb(1px, solid, alpha(black, .15))
      @media $lDesktopSmall
        fontify 24px 400 32px
      @media $desktopTablet
        fontify 22px 400 28px
    &-text
      fontify 18px 400 28px
      mt 23px
  &__toall
    pos absolute
    t 9px
    r 93px
    c black
    fontify 18px 400 18px
    bb(1px, solid, alpha(black, .15))
    @media $lDesktopSmall
      t 4px
      r 61px
    @media $desktopMedium
      t -1px
    @media $desktopTablet
      t -3px
    @media $LandscapeMedium
      ib()
      pos static
      mt 40px