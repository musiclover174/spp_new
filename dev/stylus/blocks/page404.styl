.page404
  pos relative
  oh()
  h 100vh
  df(center, center)
  mt -106px
  mb -85px
  @media $desktopTablet
    h auto
    align-items flex-start
    pt 160px
    pb 80px
  @media $LandscapeMax
    mt -120px
  &__video
    pos absolute
    t 50%
    l 50%
    min-width 100%
    min-height 100%
    opacity .65
    transform translate(-50%, -50%)
    &-wrapper
      pos fixed
      z-index -1
      t 0
      r 0
      bgc $dark
      size calc(100% - 220px) 100%
      @media $desktopTablet
        w calc(100% - 180px)
      @media $LandscapeMin
        w 100%
  &__inner
    max-width 645px
    margin 0 auto
    c white
    text-align center
    @media $desktopMedium
      max-width 440px
      padding 0 20px
  &__digits
    fontify 350px 400 235px
    letter-spacing -.02em
    @media $lDesktopSmall
      fontify 310px 400 215px
    @media $desktopMedium
      fontify 250px 400 175px
    @media $desktopTablet
      fontify 200px 400 135px
  &__notfound
    fontify 60px 400 64px
    mt 60px
    @media $lDesktopSmall
      fontify 48px 400 52px
    @media $desktopMedium
      fontify 38px 400 42px
      mt 40px
    @media $desktopTablet
      fontify 30px 400 34px
  &__text
    fontify 18px 400 28px
    mt 30px
    a:not([class])
      c white
      border-bottom 1px solid alpha(white, .4)