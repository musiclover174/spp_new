@media $PortraitMaxFrom
  .h-anim
    pos relative
    opacity 0
    b -20px
    transition 1s opacity, 1s bottom
    &[visible]
      b 0
      opacity 1
      @media $LandscapeMinFrom
        &[data-delay="1"]
          transition-delay .7s
        &[data-delay="2"]
          transition-delay 1.4s

@keyframes burger-top
  0%
    t 50px
  40%
    t 65px
  60%
    t 65px
    transform rotate(0)
  100%
    t 65px
    transform rotate(45deg)
    
@keyframes burger-bottom
  0%
    b 51px
  40%
    b 64px
  60%
    b 64px
    transform rotate(0)
  100%
    b 64px
    transform rotate(-45deg)

@keyframes burger-top-invert
  0%
    t 65px
    transform rotate(45deg)
  40%
    t 65px
    transform rotate(0)
  60%
    t 65px
  100%
    t 50px
    
@keyframes burger-bottom-invert
  0%
    b 64px
    transform rotate(-45deg)
  40%
    b 64px
    transform rotate(0)
  60%
    b 64px
  100%
    b 51px

@keyframes scrollDown
  0%
    w 0
    opacity 0
  24%
    opacity 0
  25%
    opacity 1
  100%
    opacity 1
    w 100%

@keyframes scrollDownBg
  0%
    w 0
  100%
    w 100%

@keyframes usefulChanger
  0%
    l -83px
    opacity 1
  49%
    l -103px
    opacity 0
  50%
    l -63px
    opacity 0
  100%
    l -83px
    opacity 1

@keyframes usefulChangerDesk
  0%
    l 0
    opacity 1
  49%
    l -20px
    opacity 0
  50%
    l 20px
    opacity 0
  100%
    l 0
    opacity 1