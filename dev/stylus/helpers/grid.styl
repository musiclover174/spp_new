.main
  pos relative
  l 220px
  w calc(100% - 220px)
  @media $desktopTablet
    l 180px
    w calc(100% - 180px)
  @media $LandscapeMin
    l 0
    w 100%

.container
  padding 0 94px
  @media $lDesktopSmall
    padding 0 60px
  @media $desktopTablet
    padding 0 35px
  @media $PortraitMax
    padding 0 20px
  &_rel
    pos relative

.h-spacer
  h 600px
  @media $lDesktopSmall
    h 400px

.h-wrapper
  df()
  flex-wrap wrap
  mr -18px
  ml -18px
  &_rel
    pos relative
  &_full
    h 100%
  @media $lDesktopSmall
    ml -15px
    mr -15px

[class*="h-col"]
  padding 0 18px
  @media $lDesktopSmall
    padding 0 15px

.h-col
  &_rel
    pos relative

for i in range(1, 12, 1)
  .h-col{i}
    flex 0 0 percentage(i / 12)
    max-width percentage(i / 12)
    @media $LandscapeMax
      &.h-col_desktop
        max-width none
        flex 0 0 auto