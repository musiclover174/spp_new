.fakecheckbox
  ib()
  pos relative
  c black
  &__label
    ib()
    fontify 18px 400 28px
    pos relative
    pl 37px
    mt 20px
    mb 8px
    &:before 
      content ""
      pos absolute
      l 0px
      t 0
      size 26px
      border 1px solid $bgrey
      border-radius 2px
      bgc $bgrey
      cursor pointer
      transition .7s border, .7s background-color
    &:after
      content ""
      pos absolute
      size 14px 10px
      background url('data:image/png;base64,') no-repeat center
      l 6px
      t 9px
      opacity 0
      cursor pointer
      transition .7s opacity
    a
      color inherit
      border-bottom 1px solid alpha($grey, .3)
      transition .7s border
      &:hover
        border-color transparent
  &__truecheck
    pos absolute
    l 0
    t 0
    w 0
    h 0
    border 0
    opacity 0
    &:checked + ^[0]__label:before
      bgc $green
      border-color $green
    &:checked + ^[0]__label:after
      opacity 1
    &.warning + ^[0]__label:before 
      border-color $red